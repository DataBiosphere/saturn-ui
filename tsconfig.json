// TypeScript build configuration for Terra UI application.
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "noImplicitAny": false,
    "paths": {
      "react-hyperscript-helpers": ["./types/react-hyperscript-helpers"],
      "src/*": ["./src/*"]
    }
  },
  "include": ["src", "types/images"],
  // A reference to every package should be included here so that `tsc --build`
  // can build the packages that the Terra UI application depends on.
  "references": [
    {
      "path": "./packages/components/tsconfig.json"
    },
    {
      "path": "./packages/components/tsconfig.cjs.json"
    },
    {
      "path": "./packages/core-utils/tsconfig.json"
    },
    {
      "path": "./packages/core-utils/tsconfig.cjs.json"
    }
  ]
}
